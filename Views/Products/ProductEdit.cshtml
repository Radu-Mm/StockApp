@model StockApp.Models.ProductsModel

@{
    ViewData["Title"] = "ProductEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Modificare Produs</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="ProductId" class="control-label"></label>
                <input asp-for="ProductId" class="form-control" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label">Produs</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                 
                    <input class="form-check-input" asp-for="ProductInUse" /> @Html.DisplayNameFor(model => model.ProductInUse)
                Produs Utilizat</label>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategory" class="control-label">Categorie Produs</label>
                @Html.DropDownList("ProductCategory", new SelectList(@ViewBag.Categories, "Value", "Text"),new {@class="form-control"}) 
                <span asp-validation-for="ProductCategory" class="text-danger"></span>
            </div>
            <h3></h3>
            <div class="form-group">
                <input type="submit" value="Salvare" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<h3></h3>
<div>
    <a asp-action="Index" class="btn btn-primary">Inapoi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
